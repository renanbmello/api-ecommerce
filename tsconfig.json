{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.test.ts"
    ],
    "exclude": ["node_modules"]
  }
  